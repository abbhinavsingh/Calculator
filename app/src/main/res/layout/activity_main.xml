<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="50"
    android:background="@color/brown_primary"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:gravity="center_vertical"
        android:hint="0"
        android:inputType="number"
        android:textColor="@color/white"
        android:textDirection="ltr"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.861"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:hint="0"
        android:inputType="number"
        android:textColor="@color/white"
        android:textDirection="ltr"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.861"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input"
        app:layout_constraintVertical_bias="0.0"></TextView>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="406dp"
        android:layout_height="501dp"
        android:columnCount="1"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/output">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="4"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ac"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/roundbtncolor"
                android:onClick="clearOnClick"
                android:text="AC"
                android:textSize="22dp" />

            <Button
                android:id="@+id/c"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn"
                android:onClick="bracketOnClick"
                android:text="()"
                android:textSize="22dp" />

            <Button
                android:id="@+id/mod"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn"
                android:onClick="modOnClick"
                android:text="%"
                android:textSize="22dp" />

            <Button
                android:id="@+id/divide"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn"
                android:onClick="divOnClick"
                android:text="/"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="4"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn"
                android:onClick="sevenOnClick"
                android:text="7"
                android:textSize="22dp" />

            <Button
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn"
                android:onClick="eightOnClick"
                android:text="8"
                android:textSize="22dp" />

            <Button
                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn"
                android:onClick="nineOnClick"
                android:text="9"
                android:textSize="22dp" />

            <Button
                android:id="@+id/multiply"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn"
                android:onClick="multiplyOnClick"
                android:text="X"
                android:textSize="22dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="4"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="0dp"

            android:orientation="horizontal">

            <Button
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn"
                android:onClick="fourOnClick"
                android:text="4"
                android:textSize="22dp" />

            <Button
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn"
                android:onClick="fiveOnClick"
                android:text="5"
                android:textSize="22dp" />

            <Button
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn"
                android:onClick="sixOnClick"
                android:text="6"
                android:textSize="22dp" />

            <Button
                android:id="@+id/subtract"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn"
                android:onClick="SubtractOnClick"
                android:text="-"
                android:textSize="22dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="4"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="0dp"

            android:orientation="horizontal">

            <Button
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn"
                android:onClick="oneOnClick"
                android:text="1"
                android:textSize="22dp" />

            <Button
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn"
                android:onClick="twoOnClick"
                android:text="2"
                android:textSize="22dp" />

            <Button
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn"
                android:onClick="threeOnClick"
                android:text="3"
                android:textSize="22dp" />

            <Button
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn"
                android:onClick="addOnClick"
                android:text="+"
                android:textSize="22dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="4"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="0dp"

            android:orientation="horizontal">

            <Button
                android:id="@+id/doubleZero"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn"
                android:onClick="doubleZeroOnClick"
                android:text="00"
                android:textSize="22dp" />

            <Button
                android:id="@+id/zero"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn"
                android:onClick="zeroOnClick"
                android:text="0"
                android:textSize="22dp" />

            <Button
                android:id="@+id/dot"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn"
                android:onClick="dotOnClick"
                android:text="."
                android:textSize="22dp" />

            <Button
                android:id="@+id/equalto"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn"
                android:onClick="equalOnClick"
                android:text="="
                android:textSize="22dp" />
        </LinearLayout>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>